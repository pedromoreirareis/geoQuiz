<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Resolve problema de renderização do bottomNavigation api 28 -->
        <item name="bottomNavigationStyle">@style/Widget.Design.BottomNavigationView</item>
    </style>

    <!-- Estilo sem ActionBar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyThemeButtons" parent="Theme.AppCompat.Light">

        <item name="android:colorControlHighlight">#271cbc</item>

    </style>

    <!-- Estilo Botões-->
    <style name="MyButton" parent="Widget.AppCompat.Button.Borderless">

        <item name="android:background">@drawable/bg_button</item>
        <item name="android:elevation">@dimen/elevationDefault</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>

    </style>

</resources>
