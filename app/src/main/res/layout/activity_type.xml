<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activitys.TypeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/bg_text"
        android:gravity="center"
        android:padding="8dp"
        android:text="Escolha o tipo de Quiz"
        android:textColor="@color/colorWhite"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/but_type_capitais"
        style="@style/MyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:elevation="@dimen/elevationDefault"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="Capitais"
        android:textSize="24sp"
        android:theme="@style/MyThemeButtons"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/but_type_flags"
        style="@style/MyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="Bandeiras"
        android:textSize="24sp"
        android:theme="@style/MyThemeButtons"
        app:layout_constraintEnd_toEndOf="@+id/but_type_capitais"
        app:layout_constraintStart_toStartOf="@+id/but_type_capitais"
        app:layout_constraintTop_toBottomOf="@+id/but_type_capitais" />

    <Button
        android:id="@+id/but_type_maps"
        style="@style/MyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="Mapas"
        android:textSize="24sp"
        android:theme="@style/MyThemeButtons"
        app:layout_constraintEnd_toEndOf="@+id/but_type_flags"
        app:layout_constraintStart_toStartOf="@+id/but_type_flags"
        app:layout_constraintTop_toBottomOf="@+id/but_type_flags" />

</android.support.constraint.ConstraintLayout>